<%- include('../layouts/header') -%>
    <%- include('../layouts/sidenav') -%>

        <form action="/webadmin/addProduct" method="post" enctype='multipart/form-data'>
            <div class="row pt-5">
                <div class="col-md-12">
                    <div class="row">
                        <% if (locals.info) { %>
                            <h4 class="alert alert-info">
                                <%= info %>
                            </h4>
                            <% } %>
                                <% if (locals.error) { %>
                                    <h4 class="alert alert-danger">
                                        <%= error %>
                                    </h4>
                                    <% } %>
                                    <div class="row">
                                      <div class="col-md-6">
                                        <div class="form-group">
                                          <label>Category Name</label>
                                          <select type="text" class='form-control' name="category_id">
                                            <% data.forEach(function(cat){ %>
                                              <option value="<%= cat._id %>"><%= cat.category_name %></option>
                                            <% }); %>
                                          </select>
                                        </div>
                                      </div>

                                      <div class="col-md-6">
                                        <div class="form-group">
                                          <label>Product Name</label>
                                          <input type="text" class='form-control' name="product_name" id="">
                                        </div>
                                      </div>
                                    </div>

                                    <div class="row">
                                      <div class="col-md-6">
                                        <div class="form-group">
                                          <label>Product Price</label>
                                          <input type="number" min="0" class='form-control' name="product_price" id="">
                                        </div>
                                      </div>
                                      <div class="col-md-6">
                                        <div class="form-group">
                                          <label>Author Name</label>
                                          <input type="text" class='form-control' name="author_name" id="">
                                        </div>
                                      </div>
                                    </div>

                                    <div class="row">
                                      <div class="col-md-6">
                                          <div class="form-group">
                                            <label>Product Image</label>
                                            <input type="file" class='form-control' name="image" id="">
                                          </div>
                                      </div>
                                      <div class="col-md-6">
                                        <div class="form-group">
                                          <label>Stock</label>
                                          <input type="number" class='form-control' name="stock" min="0" id="">
                                        </div>
                                      </div>
                                    </div>
                                    <div class="row">
                                      <div class="col-md-6">
                                          <div class="form-group">
                                            <label>Discount Applicable</label><br>
                                            <input type="radio" name="discount_applicable" id="" value="true" > Yes
                                            <input type="radio" name="discount_applicable" id="" value="false" checked> No
                                          </div>
                                      </div>
                                      <div class="col-md-6">
                                        <div class="form-group">
                                          <label>Discounted Amount</label>
                                          <input type="number" class='form-control' name="discounted_price" min="0" value="0" id="">
                                        </div>
                                      </div>
                                    </div>
                                    <div class="row">
                                      <div class="form-group col-md-12">
                                        <label >Description</label>
                                        <textarea class='form-control' name="description"></textarea>
                                      </div>
                                    </div>
                                    <div class="col-md-12 mt-2">
                                        <input type="submit" name="Save" value="Save "
                                            class="form-control btn btn-success">
                                    </div>
                    </div>
                </div>
              </div>
        </form>

        <%- include('../layouts/footer') -%>
